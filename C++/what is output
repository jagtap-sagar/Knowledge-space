#include <iostream> 
using namespace std; 
class X 
{ 
	public:   void foo() 
	{ 
		cout << "X::f "; 
	} 
	virtual void go() 
	{ 
		cout << "X::g "; 
	} 
}; 
class Y: public X 
	{ 
		public: virtual void foo() 
			{ 
				cout << "Y::f "; 
			} 
		    void go() 
			{ 
				cout << "Y::g "; 
			}	 
	}; 
int main() 
{ 
	X x; 
	Y y; 
	X& rx = y; 
	rx.foo(); 
	rx.go(); 
	return 0; 
} 


/* OutPut
X::f Y::g 

X doen't have virtual foo 
*/

===== Q2.
#include <iostream>

class Base {
  public:
  virtual  ~Base() =0;
};

inline Base::~Base() {
    std::cout<<"\n in Base";
}

class Derive:public Base {
  public:
   ~Derive(){
      std::cout<<"\n in Derive\n";
  }
};

int main()
{
    Base *ptr = new Derive();
    return 0;
}

/* OutPut
No Print, output is nothing.
why ? => object allocated on heap, to clean up heap memory you requied delete ptr, which called destrutor.
*/
