
#include <iostream>

using namespace std;

void sort_desc(int n, int*arr)
{
    for(int i=0; i< n; ++i) 
    {
        for(int j=i+1; j< n; ++j) 
        {
            if(arr[i]< arr[j]) 
            {
                cout<<"swap\n";
                int t= arr[i];
                arr[i]=arr[j];
                arr[j]=t;
            }
        }
    }
}

void disp(int n, int*arr)
{
    for(int i=0; i< n; ++i) 
    {
        cout<< " "<<arr[i];
    }
}

int main()
{
    int array[] = {45, 22, 100, 66, 37};
    int size = sizeof(array) / sizeof(array[0]);
    sort_desc(size,array);
    disp(size,array);
    cout<<"Hello World";

    return 0;
}


///using quick sort  ---------------------------
#include <algorithm>   // std::sort
#include <iostream>

int main() {
    int array[] = {7,5,8,9,1,3,2,1};
    std::size_t n = sizeof(array)/sizeof(array[0]);

    std::sort(array, array + n);          // ascending
    // std::sort(array, array + n, std::greater<int>()); // descending

    for (int v : array) std::cout << v << ' ';
}
